{
	"geode": "5.2.0",
	"gd": {
		"win": "2.2081"
	},
	"id": "taswert.gear",
	"name": "GEAR",
	"version": "v1.1.0-beta.3",
	"developers": [ "Taswert", "RaZooM", "Pololak", "RainixGD" ],
	"description": "Reimagine your Editor UI with ImGui",
	"links": {
		"community": "https://discord.gg/6WGqURwYy4",
		"source": "https://github.com/Taswert/GEAR"
	},
	"resources": {
		"files": [
			"resources/imgui-fonts/Inter_18pt-Regular.ttf",
			"resources/imgui-fonts/materialdesignicons-webfont.ttf",
			"resources/imgui-fonts/gear-copy-paste-icons.ttf",
			"resources/default_imgui.ini"
		]
	},
	"settings": {
		"object-list-config": {
			"type": "file",
			"name": "Object List Config",
			"description": "You can configure here categories and folders of object list module!",
			"default": "{mod_config_dir}/object_list.json",
			"control": {
				"dialog": "open",
				"filters": [
					{
						"files": [ "*.json" ],
						"description": "JSON file"
					}
				]
			}
		},
		"autosave-rate": {
			"type": "int",
			"name": "Autosave interval (minutes)",
			"description": "Make level backup every N minutes so that you don't lose it if your game crashes, \n0 - never do backups",
			"default": 5,
			"min": 0,
			"max": 30,
			"control": {
				"arrows": true,
				"slider": true,
				"slider-step": 1,
				"big-arrows": false,
				"arrow-step": 1
			}
		},

		"keybinds-title": {
            "name": "Keybinds",
            "type": "title"
        },
		"view-mode": {
			"type": "keybind",
			"name": "View Mode",
			"default": "Four",
			"category": "editor",
			"description": "Toggle the View Tab"
		},
		
		"select-all": {
			"type": "keybind",
			"name": "Select All",
			"default": "Ctrl+A",
			"category": "editor",
			"description": "Select all Objects"
		},
		"apply-buildhelper": {
			"type": "keybind",
			"name": "Apply Buildhelper",
			"default": "Ctrl+B",
			"category": "editor",
			"description": "Apply Buildhelper to selected objects"
		},

		"layer-free": {
			"type": "keybind",
			"name": "Next Free Layer",
			"default": "Ctrl+Right",
			"category": "editor",
			"description": "Go to The Next Free Editor Layer"
		},
		"layer-all": {
			"type": "keybind",
			"name": "All Layer",
			"default": "Ctrl+Left",
			"category": "editor",
			"description": "Go to The All Editor Layer"
		},

		"move-obj-up-half": {
			"type": "keybind",
			"name": "Move Object Up Half",
			"default": "",
			"category": "editor",
			"description": "Move Selected Object(s) Up 0.5 Grid Size (15 units by default)"
		},
		"move-obj-down-half": {
			"type": "keybind",
			"name": "Move Object Down Half",
			"default": "",
			"category": "editor",
			"description": "Move Selected Object(s) Down 0.5 Grid Size (15 units by default)"
		},
		"move-obj-left-half": {
			"type": "keybind",
			"name": "Move Object Left Half",
			"default": "",
			"category": "editor",
			"description": "Move Selected Object(s) Left 0.5 Grid Size (15 units by default)"
		},
		"move-obj-right-half": {
			"type": "keybind",
			"name": "Move Object Right Half",
			"default": "",
			"category": "editor",
			"description": "Move Selected Object(s) Right 0.5 Grid Size (15 units by default)"
		},

		"rotate-ccw-small": {
			"type": "keybind",
			"name": "Rotate CCW Small",
			"default": "Shift+Q",
			"category": "editor",
			"description": "Rotate Object(s) 45 degrees (by Default) Counter-Clockwise"
		},
		"rotate-cw-small": {
			"type": "keybind",
			"name": "Rotate CW Small",
			"default": "Shift+E",
			"category": "editor",
			"description": "Rotate Object(s) 45 degrees (by Default) Clockwise"
		},
		"rotation-snap": {
			"type": "keybind",
			"name": "Rotation Snap",
			"default": "",
			"category": "editor",
			"description": "Snap selected objects rotation to the near slope"
		},
		"select-filter-bind": {
			"type": "keybind",
			"name": "Select Filter",
			"default": "Y",
			"category": "editor",
			"description": "Toggles select filter"
		},
		"auto-buildhelper-bind": {
			"type": "keybind",
			"name": "Auto BuildHelper",
			"default": "H",
			"category": "editor",
			"description": "Toggles auto buildhelper"
		}
	},
	"tags": [
		"editor",
		"offline",
		"enhancement",
		"interface",
		"bugfix",
		"utility"
	],
	"dependencies": {
		"geode.node-ids": ">=1.23.0",
		"alphalaneous.object_popup_api": ">=v1.0.7-beta.3",
		"cvolton.level-id-api": ">=v2.0.0"
	},
	"incompatibilities": {
		"hjfod.betteredit": {
			"version": ">=6.10.0-alpha.12",
			"importance": "breaking"
		},
		"ninkaz.editor_utils": {
			"version": ">=1.4.0",
			"importance": "breaking"
		}
	}
}
